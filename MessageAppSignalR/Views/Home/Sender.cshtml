@{
    ViewData["Title"] = "Send Message";
}

@*@microsoft/signalr@latest*@

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">What is your message?</div>
        <div class="col-4"><input type="text" id="messageInfo" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="sendButton" value="Send" />
        </div>
        <div class="col-6">
            <input type="button" id="resetButton" value="Delete Messages" />
        </div>
    </div>
</div>

@section Scripts
{
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/message.js"></script>
}
